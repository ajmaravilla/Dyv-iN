{{!-- Reviews --}}

<div class="col-lg-12">
  <div class="card mt-3">
    <div class="card-header">
      {{posts.type}}
    </div>
    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">{{this.body}}</p>
    </div>
    <div class="card-footer">
    	<p class="card-text">{{this.createdAt}}</p>
    </div>
  </div>
</div>
