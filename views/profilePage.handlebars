<div class="container">
<div class="row">
	<div class="col-xl-12 text-center">
        <img src="https://ih1.redbubble.net/image.135305301.7505/flat,800x800,075,f.jpg" class="img-thumbnail rounded-circle profile-img">
    </div>
</div>

<div class="row">
	<div class="col-xl-12 text-center mt-4">
		<h1>{{userDb.firstName}} {{userDb.lastName}}</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-8 reviewHolder">
		{{#each userPostDb}}
			{{#if this.posts}}
				{{#each this.posts}}
						{{> profileReview}}
					</div>
				{{/each}}
			{{/if}}
		{{/each}}
	</div>
	<div class="col-lg-4">
		<form id="cms-place" class="card">
			<div class="card-header">
				<h4>Want to suggest a new Dyv-iN?</h4>
			</div>
		    <div class="form-group card-body">
		    	<label for="placeName">Name</label>
		    	<input placeholder="Pat's Place" type="text" class="form-control" id="placeName">
		    	<label for="placeAddress">Address</label>
		    	<input type="text" class="form-control" id="placeAddress">
		    	<div class="form-group">
		    	  <label for="categoryId">Select Category:</label>
		    	  <select class="form-control" id="categoryId"></select>
		    	</div>
		    	<div class="form-group">
		    	  <label for="cityId">Select City:</label>
		    	  <select class="form-control" id="cityId"></select>
		    	</div>
		    	<button type="submit" class="btn btn-success submit">Submit</button>
		    </div>
		</form>
		{{!-- commenting photoBox out for now - DH --}}
		{{!-- {{> photoBox}} --}}
	</div>
</div>
</div>

