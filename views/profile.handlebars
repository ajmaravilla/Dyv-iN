{{!-- display detail of profile --}}
<div id="detail" class="profileDetails">
    <div class="card-content">
        <p><b>Name:</b> {{userDb.dataValues.firstName}} {{userDb.dataValues.lastName}}</p>      
    </div>
</div>


<div id="profileReviewBox">
	<div id="profileReviewTitle">
		<h3>{{posts.name}}</h3>
	</div>
	<div id="profileReviewText">
		<p>{{posts.review}}</p>
	</div>
	<div id="profileReviewLinkBox">
		<p>{{posts.name}}</p>
		<p>{{posts.type}}</p>
	</div>
</div>


<div class="col-md-6">
  <form id="cms">
    <div class="form-group">
      <label for="name">Name</label>
      <input placeholder="Post Title" type="text" class="form-control" id="name">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address">
      <label for="body">Review</label>
      <textarea placeholder="Review" class="form-control" rows="10" id="body"></textarea>
      <div class="form-group">
        <label for="category">Select Category:</label>
        <select class="form-control" id="category"></select>
      </div>
      <button type="submit" class="btn btn-success submit">Submit</button>
    </div>
  </form>
</div>